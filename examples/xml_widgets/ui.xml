        <TreeNode name="three">
          <TreeNode name="tres (Spanish)" />
          <TreeNode name="drei (German)" />
          <TreeNode name="tre (Swedish)" />
        </TreeNode>
      </Tree>
    </Pane>
    <Pane pageTitle="Dialog">
      <Button id="dialogButton" highlight="true"><Icon ref="EXPAND" /> Show Dialog</Button>
      <Dialog id="dialog" w="50%" h="60%" title="Modal Dialog Example" modal="true">
